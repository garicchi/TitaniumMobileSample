<Alloy>
	<Window onOpen="windowOpen">
		<ListView id="todoList" defaultItemTemplate="todoTemp" onItemclick="onTodoClick">
			<Templates>
				<ItemTemplate name="todoTemp" height="100">
					<View layout="horizontal">
						<View id="todoCheck"></View>
						<View layout="vertical">
							<Label bindId="title" />
							<Label bindId="detail" />
							<Label bindId="deadLine" />
						</View>
					</View>
				</ItemTemplate>
			</Templates>
      <PullView>
          <View backgroundColor="red" height="50">
              <Label>Release to reload</Label>
          </View>
      </PullView>
			<ListSection id="todoSection">
			</ListSection>
		</ListView>
	</Window>
</Alloy>
